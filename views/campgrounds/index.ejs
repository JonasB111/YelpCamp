<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <!-- šitas containeris yra tam kad sumažinus iki mobile dydžio, tekstas nesusigrūstų prie pat krašto ir turėtų tarpelį -->
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <!-- p tam kad a elemento dydis būtų po vienodu p dydžiu  -->
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="col-lg-12">
        <h3>Our Most Popular Campgrounds</h3>
        <br>
    </div>

    <!-- div'o atributas style="display:flex; flex-wrap: wrap;" skirtas tam kad kai daug skirtingų aukščių paveikslėlių, gražiai susiflexintų eilės, ir nesimakaluotų -->
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <% campgrounds.forEach(function(campground){ %>
        <!-- tam kad išspausdinti paveikslėliai thumnailuose būtų responsive ties md ir sm dydžiais. -->
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campground.image %>" alt="">
                <div class="caption">
                    <h4><%= campground.name %> </h4>
                </div>
                <div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<%- include("../partials/footer") %>