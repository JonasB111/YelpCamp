<%- include('../partials/header')  %>

<div class="container">
    <div class="row">
        <!-- tik po kolkas tie inline style nuodemingi atributai, tik ant greito siai v1 versijai, iki v2. -->
        <h1 style="text-align: center;">Edit Comment</h1>

        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <!-- formgroup duoda spacing aplinkui kiekviena elementa. Specialiai form elementuose naudojamas. -->
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %> ">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<%- include('../partials/footer')  %>